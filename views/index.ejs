<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/index.css">
  <title>Index</title>
</head>

<body>

  <%- include('partials/navbar') %>

  <main>
    <!--search-->
    <div class="container">
      <div class="row d-flex justify-content-center">
        <form action="/search" method="POST">
          <div class="row align-items-center mb-3">
            <label for="search" class="col-sm-3 col-form-label text-end">Search:</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="search" name="search" placeholder="Search by Name, Area or Country">
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-sm btn-success">Search</button>
            </div>
          </div>

        </form>
      </div>

    </div>


    <!--index-->
    <div class="card-background container-fluid">
      <div class="container">
        <div class="row text-center">
          <div class="col">
            <h1>View Climbing Spots</h1>
          </div>
          <div class="row d-flex justify-content-center">

            <% for(let rock of rocks) { %>

            <div class="card text-start">
              <div class="row g-0">
                <div class="col-md-5">
                  <img src="<%=rock.image%>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <h5 class="card-title"><%=rock.name%></h5>
                    <p class="card-text"><%=rock.location.area%>, <%=rock.location.country%></p>
                    <p class="card-text"><%=rock.description.substring(0, 120)%>...</p>
                    <p class="card-text"><small class="text-body-secondary">Submitted by: Name</small></p>
                    <a href="/destination/<%=rock._id%>" class="btn btn-sm btn-primary">View</a>
                  </div>
                </div>
              </div>
            </div>

            <% } %>

          </div>
          <div class="row d-flex justify-content-center">
            <div class="col-12">
              <% if (page > 1) { %>
              <a href="/index?page=<%= page - 1 %>&limit=<%= limit %>" class="btn btn-link">Previous</a>
              <% } %>

              <% if (rocks.length === limit) { %>
              <a href="/index?page=<%= page + 1 %>&limit=<%= limit %>" class="btn btn-link">Next</a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>



  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>

</html>