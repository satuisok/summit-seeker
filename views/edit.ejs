<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/new.css">
  <title>Edit</title>
</head>

<body>

  <%- include('partials/navbar') %>

  <div class="container">
    <div class="row d-flex justify-content-center">
      <div id="header" class="col-md-6">
        <h1>Edit climbing destination</h1>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div id="form" class="col-md-6">
        <form action="/destination/<%=rock._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
          <label for="name">Name:</label>
          <input class="form-control" type="text" id="name" name="rock[name]" value="<%=rock.name%>" required>

          <label class="form-label" for="area">Location:</label>
          <input class="form-control" type="text" name="rock[location][area]" id="area" value="<%=rock.location.area%>" required>

          <label class=" form-label" for="state">State:</label>
          <input class="form-control" type="text" name="rock[location][state]" id="state" value="<%=rock.location.state%>">

          <label class=" form-label" for="country">Country:</label>
          <input class="form-control" type="text" name="rock[location][country]" id="country" value="<%=rock.location.country%>" required>

          <label for=" image" class="form-label">Add Images:</label>
          <input class="form-control" name="image" id="image" type="file" multiple>

          <label class="form-label" for="description">Description:</label>
          <textarea class="form-control" name="rock[description]" id="description" cols="20" rows="6"><%=rock.description%></textarea>

          <div class="mb-3">

            <% rock.image.forEach(function(img, i){ %>
            <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
            <div class="form-check-inline">
              <input type="checkbox" name="deleteImages[]" value="<%=img.filename%>" id="img-<%=i%>">
            </div>
            <label for="img-<%=i%>">Delete</label>
            <% }) %>

          </div>

          <button class=" btn btn-sm btn-success" type="submit">Submit</button>
        </form>

        <form action="/destination/<%=rock._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>


  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>

</html>