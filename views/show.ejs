<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">

  <script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js' crossorigin="anonymous"></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/show.css">
  <title>Document</title>
</head>

<body>
  <%- include('partials/navbar') %>
  <%- include('partials/flash') %>

  <main>

    <!--image carousel-->
    <div class="container">
      <div class="row">

        <div id="carousel" class="carousel slide">
          <div class="carousel-inner">
            <% rock.image.forEach((img, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img src="<%=img.url%>" class="d-block w-100" alt="...">
            </div>
            <% }) %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

        </div>
        <div class="row">
          <div class="col-md-8">
            <div class="row">
              <div id="info" class="col-md-4">
                <h1><%=rock.name%></h1>
                <h3><%=rock.location.area%>, <%=rock.location.country%></h3>
              </div>

              <div class="weather-table col-md-8">
                <table class="weather-box table text-center">
                  <tbody>
                    <tr id="weather-icons">
                      <td><img src="<%=forecast.currentIcon%>" alt=""></td>
                      <td><img src="<%=forecast.tomorrowIcon%>" alt=""></td>
                      <td><img src="<%=forecast.dayAfterIcon%>" alt=""></td>
                    </tr>
                    <tr id="temperature">
                      <td>
                        <%=forecast.currentTemp%>
                      </td>
                      <td>
                        <%=forecast.tomorrowTemp%>
                      </td>
                      <td>
                        <%=forecast.dayAfterTemp%>
                      </td>
                    </tr>
                    <tr id="day">
                      <td>
                        <%=forecast.currentDate%>
                      </td>
                      <td>
                        <%=forecast.tomorrow%>
                      </td>
                      <td>
                        <%=forecast.dayAfter%>
                      </td>
                    </tr>

                  </tbody>

                </table>


              </div>

            </div>
            <div>
              <button class="btn btn-sm btn-success">Add review</button>
              <button class="btn btn-sm btn-primary">Add route</button>
              <button class="btn btn-sm btn-warning">Edit</button>
            </div>
            <div>
              <p>star review</p>
            </div>
            <div>
              <p><%=rock.description%></p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="row">
              <div id='map' style='width: 400px; height: 300px;'></div>
            </div>
          </div>
        </div>
      </div>

      <h1><%=rock.name%></h1>
      <p><%=rock.location.area%>, <%=rock.location.country%></p>

      <% for(let img of rock.image) { %>
      <img src="<%=img.url%>" alt="rock image" width="300px" crossorigin="anonymous">
      <% } %>

      <p>Submitted by: <%=rock.author.username%></p>
      <a href="/destination"><button class="btn btn-sm btn-success">Go Back</button></a>

      <% if(currentUser && rock.author.equals(currentUser._id)) { %>
      <a href="/destination/<%=rock._id%>/edit"><button class="btn btn-sm btn-success">Edit</button></a>
      <%}%>

    <%if(currentUser) { %>
      <a href="/destination/<%=rock._id%>/routes/newroute"><button class="btn btn-sm btn-success">Add Route</button></a>
      <%}%>

    

    <h3>Routes</h3>
    <% for (let route of rock.routes) { %>
      <div>
        <p>Name: <%=route.name%></p>
        <p>Grade: <%=route.grade%></p>
        <p>Type: <%=route.types%></p>
        <p>Pitches: <%=route.pitches%></p>
        <p>Description: <%=route.description%></p>
        <p>Submitted by: <%=route.creator.username%></p>

        <% if(currentUser && route.creator.equals(currentUser._id)) { %>
        <form action="/destination/<%=rock._id%>/routes/<%=route._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <%}%>
    </div>
    <% } %>

        <h3>Reviews</h3>
        <% for(let review of rock.reviews) { %>
        <div>
          <p>Rating: <%=review.rating%></p>
          <p>Review: <%=review.body%></p>
          <p>Author: <%review.author.username%></p>

          <% if(currentUser && review.author.equals(currentUser._id)) { %>
          <form action="/destination/<%=rock._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
          <%}%>

    </div>
    <% } %>

          <!--review form-->
          <%if (currentUser) { %>
          <div class="container-fluid">
            <div class="container">
              <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                  <h2>Leave a review:</h2>
                </div>
              </div>
              <div class="row d-flex justify-content-center">
                <div class="col-md-6">

                  <form action="/destination/<%=rock._id%>/reviews" method="POST">
                    <label class="form-label" for="rating">Rating:</label>
                    <input class="form-range" type="range" id="rating" min="1" max="5" name="review[rating]" required>

                    <label for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10" name="review[body]" required></textarea>

                    <button class="btn btn-sm btn-success">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <%}%>
    <!------------->
 
  </main>

  <%- include('partials/footer') %>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
          <script>
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
            const rock = <%- JSON.stringify(rock) %>;
          </script>
          <script src="/js/showPageMap.js"></script>
</body>

</html>