<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">

  <script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js' crossorigin="anonymous"></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/show.css">
  <title>Document</title>
</head>

<body>
  <%- include('partials/navbar') %>
  <%- include('partials/flash') %>

  <main>

    <!--image carousel-->
    <div class="container">
      <div class="row">

        <div id="carousel" class="carousel slide">
          <div class="carousel-inner">
            <% rock.image.forEach((img, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img src="<%=img.url%>" class="d-block w-100" alt="...">
            </div>
            <% }) %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>

        <!--info-->
        <div id="info-row" class="row">
          <div class="col-xl-8">
            <div class="row">

              <div id="info" class="col-md-4">
                <h1><%=rock.name%></h1>
                <h3><%=rock.location.area%>, <%=rock.location.country%></h3>
                <div>
                  <p>star review</p>
                </div>
              </div>


              <div class="weather-table col-md-8">
                <table id="weather-box" class="text-center">
                  <tbody>
                    <tr id="weather-icons">
                      <td><img src="<%=forecast.currentIcon%>" alt=""></td>
                      <td><img src="<%=forecast.tomorrowIcon%>" alt=""></td>
                      <td><img src="<%=forecast.dayAfterIcon%>" alt=""></td>
                    </tr>
                    <tr id="temperature">
                      <td>
                        <%=forecast.currentTemp%>
                      </td>
                      <td>
                        <%=forecast.tomorrowTemp%>
                      </td>
                      <td>
                        <%=forecast.dayAfterTemp%>
                      </td>
                    </tr>
                    <tr id="day">
                      <td>
                        <%=forecast.currentDate%>
                      </td>
                      <td>
                        <%=forecast.tomorrow%>
                      </td>
                      <td>
                        <%=forecast.dayAfter%>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

            </div>

            <div id="buttons">
              <% if (currentUser) { %>
              <a class="button-link" href="/destination/<%=rock._id%>/reviews"><button class="btn btn-sm btn-success">Add review</button></a>
              <a class="button-link" href="/destination/<%=rock._id%>/routes/newroute"><button class="btn btn-sm btn-primary">Add route</button></a>
              <% } else { %>
              <a class="button-link" href="/login"><button class="btn btn-link">Login to add review or new route</button></a>
              <% } %>

              <% if(currentUser && rock.author.equals(currentUser._id)) { %>
              <a class="button-link" href="/destination/<%=rock._id%>/edit"><button class="btn btn-sm btn-warning">Edit</button></a>
              <%}%>
            </div>

           

            <div id="description-container">
              <p><%=rock.description%></p>
            </div>

          </div>

          <!--map-->
          <div id="map-container" class="col-md-4">
            <div class="row justify-content-end">
              <div id='map' style='width: 450px; height: 450px;'></div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!--route chart-->
    <div id="route-chart" class="container-fluid">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div>
              <canvas id="myChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--route table-->
    <% if (rock.routes.length > 0) { %>
    <div id="route-table" class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Grade</th>
                <th scope="col">Pitches</th>
                <th scope="col">Description</th>
                <th scope="col">Created By</th>
              </tr>
            </thead>
            <tbody>
              <% for (let route of rock.routes) { %>
              <tr>
                <td><%=route.name%></td>
                <td><%=route.grade%></td>
                <td><%=route.pitches%></td>
                <td><%=route.description%></td>
                <td><%=route.creator.username%>
                  <% if(currentUser && route.creator.equals(currentUser._id)) { %>
                  <form id="route-delete" action="/destination/<%=rock._id%>/routes/<%=route._id%>?_method=DELETE" method="POST">
                    <button id="delete" class="btn btn-link">Delete</button>
                  </form>
                  <%}%>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% } %>

    <!--reviews-->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-4 text-center">
          <h2>Reviews</h2>
        </div>
        <div class="row">
          <% for(let review of rock.reviews) { %>

          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Rating</h5>
              <h6 class="card-subtitle mb-2 text-body-secondary"><%=review.author.username%></h6>
              <p class="card-text"><%=review.body%></p>
              <% if(currentUser && review.author.equals(currentUser._id)) { %>
              <form action="/destination/<%=rock._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                <button class="card-link btn btn-link">Delete</button>
              </form>
              <%}%>
            </div>
          </div>

          <% } %>
            </div>

          </div>
        </div>





        <h1><%=rock.name%></h1>
        <p><%=rock.location.area%>, <%=rock.location.country%></p>

        <% for(let img of rock.image) { %>
        <img src="<%=img.url%>" alt="rock image" width="300px" crossorigin="anonymous">
        <% } %>

        <p>Submitted by: <%=rock.author.username%></p>
        <a href="/destination"><button class="btn btn-sm btn-success">Go Back</button></a>

        <% if(currentUser && rock.author.equals(currentUser._id)) { %>
        <a href="/destination/<%=rock._id%>/edit"><button class="btn btn-sm btn-success">Edit</button></a>
        <%}%>

    <%if(currentUser) { %>
        <a href="/destination/<%=rock._id%>/newroute"><button class="btn btn-sm btn-success">Add Route</button></a>
        <%}%>

    

    <h3>Routes</h3>
    <% for (let route of rock.routes) { %>
        <div>
          <p>Name: <%=route.name%></p>
          <p>Grade: <%=route.grade%></p>
          <p>Type: <%=route.types%></p>
          <p>Pitches: <%=route.pitches%></p>
          <p>Description: <%=route.description%></p>
          <p>Submitted by: <%=route.creator.username%></p>

          <% if(currentUser && route.creator.equals(currentUser._id)) { %>
          <form action="/destination/<%=rock._id%>/routes/<%=route._id%>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
          <%}%>
    </div>
    <% } %>

          <h3>Reviews</h3>
          <% for(let review of rock.reviews) { %>
          <div>
            <p>Rating: <%=review.rating%></p>
            <p>Review: <%=review.body%></p>
            <p>Author: <%review.author.username%></p>

            <% if(currentUser && review.author.equals(currentUser._id)) { %>
            <form action="/destination/<%=rock._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <%}%>

    </div>
    <% } %>

            <!--review form-->
            <%if (currentUser) { %>
            <div class="container-fluid">
              <div class="container">
                <div class="row d-flex justify-content-center">
                  <div class="col-md-6">
                    <h2>Leave a review:</h2>
                  </div>
                </div>
                <div class="row d-flex justify-content-center">
                  <div class="col-md-6">

                    <form action="/destination/<%=rock._id%>/reviews" method="POST">
                      <label class="form-label" for="rating">Rating:</label>
                      <input class="form-range" type="range" id="rating" min="1" max="5" name="review[rating]" required>

                      <label for="body">Review</label>
                      <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10" name="review[body]" required></textarea>

                      <button class="btn btn-sm btn-success">Submit</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <%}%>
    <!------------->
 
  </main>

  <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
            <script>
              const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
              const rock = <%- JSON.stringify(rock) %>;
            </script>
            <script src="/js/showPageMap.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script src="/js/routeChart.js"></script>
            <script>
              // Call the createRouteChart function with the rock data
              createRouteChart(<%- JSON.stringify(rock) %>);
            </script>
</body>

</html>